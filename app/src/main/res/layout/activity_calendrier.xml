<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:translationX="5dp">


    <TextView
        android:id="@+id/titre_calendrier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="#FF8D8D"
        android:gravity="center"
        android:text="Votre calendrier du mois"
        android:textColor="#FF8D8D"
        android:textSize="24sp"
        android:textStyle="bold"
        android:translationY="40dp" />


    <Button
        android:id="@+id/button_ajouter_event"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#F88CCF"
        android:radius="100dp"
        android:text="ajouter un évènement"
        android:textColor="#D75F1B"


        android:translationX="90dp"
        android:translationY="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />


    <Button
        android:id="@+id/nextMonthBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="suivant" />

    <ListView
        android:id="@+id/listview_cal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="350dp" />

</LinearLayout>
