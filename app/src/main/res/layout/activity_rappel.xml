<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rappel">

    <ImageView
        android:id="@+id/logoGestio3"
        android:layout_width="144dp"
        android:layout_height="131dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="147dp"
        app:layout_constraintBottom_toTopOf="@+id/reg_user_email2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_gestio" />

    <TextView
        android:id="@+id/textRappel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="657dp"
        android:text="Rappels "
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toEndOf="@+id/logoGestio3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_historique"
        android:layout_width="194dp"
        android:layout_height="107dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="110dp"
        android:text="Historique"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoGestio3"
        app:strokeColor="#E89665" />

    <Button
        android:id="@+id/button_ajout"
        android:layout_width="194dp"
        android:layout_height="107dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="189dp"
        android:text="Ajouter un rappel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_historique"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>