<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <ImageView
        android:id="@+id/logoGestio3"
        android:layout_width="144dp"
        android:layout_height="131dp"
        android:layout_marginEnd="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_gestio"
        tools:layout_editor_absoluteY="0dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </TableLayout>

    <Button
        android:id="@+id/button_agenda"
        android:layout_width="182dp"
        android:layout_height="50dp"
        android:backgroundTint="#56F44336"
        android:text="Agenda"
        app:strokeColor="#F44336"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/button_calendrier"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#32F44336"
        android:text="Calendrier"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/button_note"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#3CE91E63"
        android:text="Note"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/button_rappel"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:backgroundTint="#52E91E63"
        android:text="Rappel"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="578dp" />

    <Button
        android:id="@+id/button_tdl"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#7CF44336"
        android:text="To do list"
        app:layout_constraintBottom_toTopOf="@+id/button_agenda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titre_option"
        app:layout_constraintVertical_bias="0.076" />

    <EditText
        android:id="@+id/Titre_option"
        android:layout_width="169dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="            Mes Options"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="82dp" />

</androidx.constraintlayout.widget.ConstraintLayout>